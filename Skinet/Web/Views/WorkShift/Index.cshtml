@model IEnumerable<Core.Entities.WorkShift>

@{
    ViewData["Title"] = "Index Work Shift";
}

<h1>Index Work Shift</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
    <div class="row">
        <div class="col-md-4">
            <form asp-controller="WorkShift" asp-action="Search">
                <span class="btn-group col-md-12">
                    <input class="form-control " type="text" name="searchName" placeholder="Search Key" />
                    <button type="submit" class="btn btn-primary">Search</button>
                </span>
            </form>
        </div>
    </div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreateAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shift)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doctor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Shift.IdShift)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Doctor.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdWork">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.IdWork">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
