@using Core.Entities
@model Core.Entities.Doctor;

@{
    ViewData["Title"] = "Delete Doctor";
}

<div class="card shadow mb-2">
    <form method="POST" asp-area="" asp-controller="Doctor" asp-action="Remove">
        <div class="form-group">
            <label asp-for="Id"></label>
            <input disable class="form-control" asp-for="Id" placeholder="Doctor ID">
        </div>
        <div class="form-group">
            <label asp-for="Name">Full Name</label>
            <input disable class="form-control" asp-for="Name" placeholder="Full Name">
        </div>
        <div class="form-group">
            <label asp-for="Phone">Phone number</label>
            <input class="form-control" asp-for="Phone" placeholder="Phone number">
        </div>
        <div class="form-group">
            <label asp-for="Address">Address</label>
            <input class="form-control" asp-for="Address" placeholder="Address">
        </div>
                <div class="form-group">
            <label asp-for="Gender">Gender</label>
            <select class="form-control" asp-for="Gender" asp-items="Html.GetEnumSelectList<Gender>()">
            </select>
        </div>
        <div class="form-group">
            <label asp-for="Birthday">Birthday</label>
            <input class="form-control" asp-for="Birthday">
        </div>
        <div class="form-group">
            <label asp-for="Department">Department</label>
            <input class="form-control" asp-for="Department" placeholder="Department">
        </div>
        <div class="modal-footer">
            <button type="submit" class="btn btn-success">Remove</button>
        </div>
    </form>
</div>
