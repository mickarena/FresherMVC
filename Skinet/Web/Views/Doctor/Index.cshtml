@using Core.Entities

@model IEnumerable<Core.Entities.Doctor>;

@{
    ViewData["Title"] = "Doctor List";
    Page page = new Page();
    int pageNo = 0;
    if(ViewBag.Page != null)
    {
        page = ViewBag.Page;
        pageNo = page.CurrentPage;
    }
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Doctor list</h6>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-8">
                <p>
                    <button type="submit" class="btn btn-primary"data-bs-toggle="modal" data-bs-target="#them">Add</button>
                </p>
            </div>
            <div class="col-md-4">
                <form asp-controller="Doctor" asp-action="Search">
                    <span class="btn-group col-md-12">
                        <input class="form-control " type="text" name="searchName" placeholder="Search Key" />
                        <button type="submit" class="btn btn-primary">Search</button>
                    </span>
                </form>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>

                    <tr>
                        
                        <th>
                            Full Name
                        </th>
                        <th>
                            Gender
                        </th>
                        <th>
                            Phone Number
                        </th>
                        <th>
                            Address
                        </th>
                        <th>
                            Birthday
                        </th>
                         <th>
                            Department
                        </th>
                        <th>
                            Image
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model)
                    {
                    <tr>
                        
                        <td>@item.Name</td>
                        <td>@item.Gender</td>
                        <td>@item.Phone</td>
                        <td>@item.Address</td>
                        <td>@item.Birthday</td>
                        <td>@item.Department</td>
                        <td>
                            <img src="~/image/doctors/@item.Image" asp-append-version="true" width="100px" height=100px>
                        </td>
                        <td>
                            <a class="btn btn-success" asp-controller="Doctor" asp-action="Edit" asp-route-id="@item.Id" ><i class="far fa-edit"></i></a>
                            <a class="btn btn-success" asp-controller="Doctor" asp-action="Delete" asp-route-id="@item.Id" ><i class="fa-solid fa-user-slash"></i></a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


<div class="container">
    @if(page.TotalPages > 0)
    {
        <ul class="pagination justify-content-end">

            @if(page.CurrentPage > 1)
            {
                <li  class="page-item">
                    <a class="page-link" asp-controller="Doctor" asp-action="Index" asp-route-pg="1">First</a>
                </li>
                <li>
                    <a class="page-link" asp-controller="Doctor" asp-action="Index" asp-route-pg="@(page.CurrentPage - 1)">Previous</a>
                </li>
            }


            @for(var pge = page.StartPage; pge <= page.EndPage; pge++)
            {
                <li class="page-item @(pge == page.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-controller="Doctor" asp-action="Index" asp-route-pg="@pge">@pge</a>
                </li>
            }

            @if(page.CurrentPage < page.TotalPages){
                <li class="page-item">
                    <a class="page-link" asp-controller="Doctor" asp-action="Index" asp-route-pg="@(page.CurrentPage +1)">Next</a>
                </li>
                 <li  class="page-item">
                    <a class="page-link" asp-controller="Doctor" asp-action="Index" asp-route-pg="@(page.TotalPages)">Last</a>
                </li>
            }
            

        </ul>
    }
</div>
