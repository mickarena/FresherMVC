@model Core.Entity.MedicineInfomation

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>MedicineInfomation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Loại thuốc</label>
                <select asp-for="MedicineIDType" class ="form-control" asp-items="ViewBag.MedicineIDType"></select>
            </div>
            <div class="form-group">
                <label  class="control-label">Tên thuốc</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Ngày hết hạn</label>
                <input asp-for="ExpireDate" class="form-control" type="date" placeholder="dd/mm/yyyy"/>
                <span asp-validation-for="ExpireDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Đơn giá</label>
                <input asp-for="UnitPrice" class="form-control" />
                <span asp-validation-for="UnitPrice" class="text-danger"></span>
            </div>
            <div class="form-group form-check-inline">
                <label class="form-check-label">
                    <input type="radio" class="form-check-input" value="false" id="radio1" name="IsEmpty" asp-for="IsEmpty" />
                    <label class="form-check-label" for="radio1">Còn hàng</label>
                </label>
            </div>
            <div class="form-group form-check-inline">
                <label class="form-check-label">
                    <input type="radio" class="form-check-input" value="true" id="radio2" name="IsEmpty" asp-for="IsEmpty" />
                    <label class="form-check-label" for="radio2">Hết hàng</label>
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
