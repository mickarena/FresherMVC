@model Core.Entity.MedicineInfomation

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>MedicineInfomation</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Tên thuốc
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Ngày nhập
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ImportDate)
        </dd>
        <dt class = "col-sm-2">
            Ngày hết hạn
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ExpireDate)
        </dd>
        <dt class = "col-sm-2">
            Số lượng
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class = "col-sm-2">
            Đơn giá
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UnitPrice)
        </dd>
        <dt class = "col-sm-2">
            Tình trạng còn hàng
        </dt>
        <dd class = "col-sm-10">
            @(Model.IsEmpty == true ? "Hết hàng" : "Còn hàng")
        </dd>
        <dt class = "col-sm-2">
            Loại thuốc
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MedicineTypes.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
