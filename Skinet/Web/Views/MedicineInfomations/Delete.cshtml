@model Core.Entities.MedicineInfomation

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>MedicineInfomation</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Medicine name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Import date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ImportDate)
        </dd>
        <dt class="col-sm-2">
            Expire date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ExpireDate)
        </dd>
        <dt class="col-sm-2">
            Quantity
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class="col-sm-2">
           Unit price
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UnitPrice)
        </dd>
        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @(Model.IsEmpty == true ? "Out of stock" : "In stock")
        </dd>
        <dt class="col-sm-2">
            Medicine type
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MedicineTypes.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
