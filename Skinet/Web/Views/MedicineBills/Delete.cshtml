@model Core.Entity.MedicineBill

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>MedicineBill</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Id bác sĩ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DoctorID)
        </dd>
        <dt class="col-sm-2">
            Ngày tạo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateCreate)
        </dd>
        <dt class="col-sm-2">
            Tình trạng thanh toán
        </dt>
        <dd class="col-sm-10">
            @(Model.PayStatus == false ? "Chưa thanh toán" : "Đã thanh toán")
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
