@model Core.Entity.MedicineBill

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>MedicineBill</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Id bác sĩ
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DoctorID)
        </dd>
        <dt class = "col-sm-2">
            Ngày tạo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateCreate)
        </dd>
        <dt class = "col-sm-2">
            Tình trạng thanh toán
        </dt>
        <dd class = "col-sm-10">
            @(Model.PayStatus == false ? "Chưa thanh toán" : "Đã thanh toán")
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
