@model IEnumerable<Core.Entities.HospitalBed>;
@{
    ViewData["Title"] = "Index";
    var j = 0;
    int numberItems = (10 * (ViewBag.pageIndex-1));
}

<h1>Index</h1>
<h3>Total Beds: @ViewBag.TotalItems</h3>
<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by name: <input type="text" name="search" value="@ViewBag.searchName" placeholder="Search Key" />
            <input type="submit" value="Search" class="btn btn-primary" /> 
            
                <a asp-action="Index">Back to List</a>
         
        </p>
    </div>
</form>
<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <td>ID Giường</td>

            <td>ID Phòng</td>

            <td>ID Bệnh nhân</td>

            <td>Trạng thái</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            j++;
            <tr>
                <td>
                    @(j + numberItems)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IDRoom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IDPatient)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                
                <td>
                    <a class="btn btn-success" href="bed/Edit/@item.Id">Edit</a>

                    <a onclick="return confirm('Are You Sure Delete Id : @item.Id')" class="btn btn-danger" href="bed/Delete/@item.Id">Delete</a>
                </td>
                

            </tr>
        }
    </tbody>
</table>
<div aria-label="Page navigation example">
    <ul class="pagination">
        <li class="page-item @(ViewBag.PageIndex <= 1 ? "disabled" : "")"><a class="page-link" href="/bed?search=@(ViewBag.searchName)&pageIndex=1">First</a></li>
        <li class="page-item @(ViewBag.PageIndex <= 1 ? "disabled" : "")"><a class="page-link" href="/bed?search=@(ViewBag.searchName)&pageIndex=@(ViewBag.PageIndex-1)">Pre</a></li>
        @for (var i = ViewBag.StartPage; i < ViewBag.EndPage; i++)
        {
            <li class="page-item @(ViewBag.PageIndex == i+1 ? "active" : "")"><a class="page-link" href="/bed?search=@(ViewBag.searchName)&pageIndex=@(i+1)">@(i+1)</a></li>
        }
        <li class="page-item @(ViewBag.PageIndex >= ViewBag.TotalPage ? "disabled" : "")"><a class="page-link" href="/bed?search=@(ViewBag.searchName)&pageIndex=@(ViewBag.PageIndex+1)">Next</a></li>
        <li class="page-item @(ViewBag.PageIndex >= ViewBag.TotalPage ? "disabled" : "")"><a class="page-link" href="/bed?search=@(ViewBag.searchName)&pageIndex=@(ViewBag.TotalPage)">Last</a></li>
    </ul>
</div>

